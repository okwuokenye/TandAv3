<Window x:Class="TandA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TandA"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="325">
    <Grid Background="AliceBlue">
        <StackPanel>
            <TextBlock Text="Login" HorizontalAlignment="Center" FontSize="30" Margin="55 50" />
            <StackPanel Orientation="Horizontal" Margin="10 0">
                <TextBlock Text="Username: " FontSize="20" />
                <TextBox Width="180" Height="20" Margin="6 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10 10">
                <TextBlock Text="Password: " FontSize="20" />
                <PasswordBox Width="180" Height="20" Margin="6 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Login" Click="Button_Click" Margin="10 5" Height="30" Width="50"/>
                <!--<Button Content="Exit" Margin="20 0" Height="30" Width="50"/>-->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
